<Page x:Class="Lagersoftware.View.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lagersoftware.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenu">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Command="{Binding NewArtikel}" Click="Button_Click">Artikel Erstellen</Button>
        <Button Grid.Row="1" Click="Button_Click_1">Artikel Löschen</Button>
        <Button Grid.Row="2" Click="Button_Click_2">Artikel Einbuchen</Button>
        <Button Grid.Row="3" Click="Button_Click_3">Artikel Ausbuchen</Button>
        <Button Grid.Row="4" Click="Button_Click_4">Alle Artikel</Button>
        <Button Grid.Row="5" Click="Button_Click_5">Artikel Suchen</Button>
        
    </Grid>
</Page>
